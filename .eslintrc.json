{
  "env": {
    "node": true,   // Node.js 전역 변수를 허용
    "browser": true // 브라우저 전역 변수도 허용
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "plugins": [
    "vue"
  ],
  "rules": {
    // 여기에 원하는 ESLint 규칙을 추가할 수 있습니다.
    "no-undef": "off" // module과 process 관련 오류를 무시합니다
  }
}
